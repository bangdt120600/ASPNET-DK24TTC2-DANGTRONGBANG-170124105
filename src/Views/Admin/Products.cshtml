@model IEnumerable<MilkTeaShop.Models.Product>
@{
    ViewData["Title"] = "Quản Lý Sản Phẩm";
}

<div class="container my-4">
    <h2>Quản Lý Sản Phẩm</h2>
    <div class="mb-3">
        <a asp-action="Index" class="btn btn-secondary">Quay Lại</a>
        <a asp-action="CreateProduct" class="btn btn-success">Thêm Sản Phẩm</a>
    </div>

    <table class="table table-striped">
        <thead>
            <tr>
                <th>ID</th>
                <th>Hình</th>
                <th>Tên</th>
                <th>Danh Mục</th>
                <th>Giá</th>
                <th>Trạng Thái</th>
                <th>Thao Tác</th>
            </tr>
        </thead>
        <tbody>
            @foreach (var product in Model)
            {
                <tr>
                    <td>@product.Id</td>
                    <td><img src="@product.ImageUrl" style="width: 50px; height: 50px; object-fit: cover;" /></td>
                    <td>@product.Name</td>
                    <td>@product.Category?.Name</td>
                    <td>@product.Price.ToString("N0") đ</td>
                    <td>
                        @if (product.IsActive)
                        {
                            <span class="badge bg-success">Hoạt Động</span>
                        }
                        else
                        {
                            <span class="badge bg-secondary">Ẩn</span>
                        }
                    </td>
                    <td>
                        <a asp-action="EditProduct" asp-route-id="@product.Id" class="btn btn-sm btn-primary">Sửa</a>
                        <form asp-action="DeleteProduct" method="post" class="d-inline" onsubmit="return confirm('Xóa sản phẩm này?')">
                            <input type="hidden" name="id" value="@product.Id" />
                            <button type="submit" class="btn btn-sm btn-danger">Xóa</button>
                        </form>
                    </td>
                </tr>
            }
        </tbody>
    </table>
</div>
