@model IEnumerable<MilkTeaShop.Models.Product>
@{
    ViewData["Title"] = "Menu";
}

<div class="container my-4">
    <h2 class="text-center mb-4">Menu Trà Sữa</h2>
    
    <div class="mb-4">
        <a href="@Url.Action("Index")" class="btn btn-outline-primary">Tất Cả</a>
        @foreach (var category in ViewBag.Categories)
        {
            <a href="@Url.Action("Index", new { categoryId = category.Id })" class="btn btn-outline-primary">@category.Name</a>
        }
    </div>

    <div class="row">
        @foreach (var product in Model)
        {
            <div class="col-md-4 mb-4">
                <div class="card h-100">
                    <img src="@product.ImageUrl" class="card-img-top" alt="@product.Name" style="height: 250px; object-fit: cover;">
                    <div class="card-body">
                        <span class="badge bg-secondary mb-2">@product.Category?.Name</span>
                        <h5 class="card-title">@product.Name</h5>
                        <p class="card-text">@product.Description</p>
                        <p class="text-danger fw-bold fs-5">@product.Price.ToString("N0") đ</p>
                        <a href="@Url.Action("Details", new { id = product.Id })" class="btn btn-primary w-100">Đặt Hàng</a>
                    </div>
                </div>
            </div>
        }
    </div>
</div>
