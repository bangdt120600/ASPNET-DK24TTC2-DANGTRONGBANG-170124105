@model MilkTeaShop.Models.Product
@{
    ViewData["Title"] = Model.Name;
}

<div class="container my-4">
    <div class="row">
        <div class="col-md-6">
            <img src="@Model.ImageUrl" class="img-fluid rounded" alt="@Model.Name">
        </div>
        <div class="col-md-6">
            <h2>@Model.Name</h2>
            <p class="text-muted">@Model.Category?.Name</p>
            <p>@Model.Description</p>
            <h3 class="text-danger">@Model.Price.ToString("N0") đ</h3>

            <form asp-controller="Cart" asp-action="AddToCart" method="post" class="mt-4">
                <input type="hidden" name="productId" value="@Model.Id" />
                <input type="hidden" name="productName" value="@Model.Name" />
                <input type="hidden" name="price" value="@Model.Price" />
                <input type="hidden" name="imageUrl" value="@Model.ImageUrl" />

                <div class="mb-3">
                    <label class="form-label">Size:</label>
                    <select name="size" class="form-select">
                        <option value="M">M</option>
                        <option value="L">L (+5.000đ)</option>
                    </select>
                </div>

                <div class="mb-3">
                    <label class="form-label">Đường:</label>
                    <select name="sugar" class="form-select">
                        <option value="100">100%</option>
                        <option value="70">70%</option>
                        <option value="50">50%</option>
                        <option value="30">30%</option>
                        <option value="0">0%</option>
                    </select>
                </div>

                <div class="mb-3">
                    <label class="form-label">Đá:</label>
                    <select name="ice" class="form-select">
                        <option value="100">100%</option>
                        <option value="70">70%</option>
                        <option value="50">50%</option>
                        <option value="30">30%</option>
                        <option value="0">0%</option>
                    </select>
                </div>

                <div class="mb-3">
                    <label class="form-label">Topping:</label>
                    <select name="topping" class="form-select">
                        <option value="">Không</option>
                        <option value="Trân châu">Trân châu (+5.000đ)</option>
                        <option value="Thạch">Thạch (+5.000đ)</option>
                        <option value="Pudding">Pudding (+8.000đ)</option>
                    </select>
                </div>

                <div class="mb-3">
                    <label class="form-label">Số lượng:</label>
                    <input type="number" name="quantity" value="1" min="1" class="form-control" style="width: 100px;">
                </div>

                <button type="submit" class="btn btn-primary btn-lg w-100">Thêm Vào Giỏ Hàng</button>
            </form>
        </div>
    </div>
</div>
