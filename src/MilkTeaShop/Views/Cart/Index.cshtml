@model List<MilkTeaShop.Models.CartItem>
@{
    ViewData["Title"] = "Giỏ Hàng";
}

<div class="container my-4">
    <h2 class="mb-4">Giỏ Hàng Của Bạn</h2>

    @if (!Model.Any())
    {
        <div class="alert alert-info">
            Giỏ hàng trống. <a href="@Url.Action("Index", "Products")">Tiếp tục mua sắm</a>
        </div>
    }
    else
    {
        <div class="table-responsive">
            <table class="table">
                <thead>
                    <tr>
                        <th>Sản Phẩm</th>
                        <th>Tùy Chọn</th>
                        <th>Giá</th>
                        <th>Số Lượng</th>
                        <th>Tổng</th>
                        <th></th>
                    </tr>
                </thead>
                <tbody>
                    @foreach (var item in Model)
                    {
                        <tr>
                            <td>
                                <img src="@item.ImageUrl" alt="@item.ProductName" style="width: 60px; height: 60px; object-fit: cover;" class="me-2">
                                @item.ProductName
                            </td>
                            <td>
                                <small>
                                    Size: @item.Size<br />
                                    Đường: @item.Sugar%<br />
                                    Đá: @item.Ice%<br />
                                    @if (!string.IsNullOrEmpty(item.Topping))
                                    {
                                        <text>Topping: @item.Topping</text>
                                    }
                                </small>
                            </td>
                            <td>@item.Price.ToString("N0") đ</td>
                            <td>
                                <form asp-action="UpdateQuantity" method="post" class="d-inline">
                                    <input type="hidden" name="productId" value="@item.ProductId" />
                                    <input type="hidden" name="size" value="@item.Size" />
                                    <input type="hidden" name="sugar" value="@item.Sugar" />
                                    <input type="hidden" name="ice" value="@item.Ice" />
                                    <input type="hidden" name="topping" value="@item.Topping" />
                                    <input type="number" name="quantity" value="@item.Quantity" min="1" class="form-control form-control-sm" style="width: 70px;" onchange="this.form.submit()">
                                </form>
                            </td>
                            <td class="fw-bold">@item.Total.ToString("N0") đ</td>
                            <td>
                                <form asp-action="Remove" method="post" class="d-inline">
                                    <input type="hidden" name="productId" value="@item.ProductId" />
                                    <input type="hidden" name="size" value="@item.Size" />
                                    <input type="hidden" name="sugar" value="@item.Sugar" />
                                    <input type="hidden" name="ice" value="@item.Ice" />
                                    <input type="hidden" name="topping" value="@item.Topping" />
                                    <button type="submit" class="btn btn-sm btn-danger">Xóa</button>
                                </form>
                            </td>
                        </tr>
                    }
                </tbody>
                <tfoot>
                    <tr>
                        <td colspan="4" class="text-end"><strong>Tổng Cộng:</strong></td>
                        <td colspan="2" class="fw-bold text-danger fs-5">@Model.Sum(c => c.Total).ToString("N0") đ</td>
                    </tr>
                </tfoot>
            </table>
        </div>

        <div class="d-flex justify-content-between mt-4">
            <a href="@Url.Action("Index", "Products")" class="btn btn-secondary">Tiếp Tục Mua Sắm</a>
            <a href="@Url.Action("Checkout", "Order")" class="btn btn-success btn-lg">Đặt Hàng</a>
        </div>
    }
</div>
