@model MilkTeaShop.Models.Promotion
@{
    ViewData["Title"] = "Thêm Khuyến Mãi";
}

<div class="container my-4">
    <h2>Thêm Khuyến Mãi Mới</h2>
    <a asp-action="Promotions" class="btn btn-secondary mb-3">Quay Lại</a>

    <div class="row">
        <div class="col-md-8">
            <div class="card">
                <div class="card-body">
                    <form asp-action="CreatePromotion" method="post">
                        <div class="mb-3">
                            <label asp-for="Code" class="form-label">Mã Khuyến Mãi</label>
                            <input asp-for="Code" class="form-control" placeholder="VD: TRASUA50" required />
                        </div>

                        <div class="mb-3">
                            <label asp-for="Description" class="form-label">Mô Tả</label>
                            <textarea asp-for="Description" class="form-control" rows="2" required></textarea>
                        </div>

                        <div class="row">
                            <div class="col-md-6 mb-3">
                                <label asp-for="DiscountPercent" class="form-label">Giảm Giá (%)</label>
                                <input asp-for="DiscountPercent" type="number" class="form-control" min="1" max="100" required />
                            </div>
                            <div class="col-md-6 mb-3">
                                <label asp-for="MinOrderAmount" class="form-label">Đơn Tối Thiểu (đ)</label>
                                <input asp-for="MinOrderAmount" type="number" class="form-control" min="0" required />
                            </div>
                        </div>

                        <div class="row">
                            <div class="col-md-6 mb-3">
                                <label asp-for="StartDate" class="form-label">Ngày Bắt Đầu</label>
                                <input asp-for="StartDate" type="date" class="form-control" required />
                            </div>
                            <div class="col-md-6 mb-3">
                                <label asp-for="EndDate" class="form-label">Ngày Kết Thúc</label>
                                <input asp-for="EndDate" type="date" class="form-control" required />
                            </div>
                        </div>

                        <div class="mb-3 form-check">
                            <input asp-for="IsActive" class="form-check-input" checked />
                            <label asp-for="IsActive" class="form-check-label">Kích Hoạt Ngay</label>
                        </div>

                        <button type="submit" class="btn btn-success">Thêm Khuyến Mãi</button>
                    </form>
                </div>
            </div>
        </div>
    </div>
</div>
