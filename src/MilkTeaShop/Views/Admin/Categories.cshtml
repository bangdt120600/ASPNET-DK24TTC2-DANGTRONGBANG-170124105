@model IEnumerable<MilkTeaShop.Models.Category>
@{
    ViewData["Title"] = "Quản Lý Danh Mục";
}

<div class="container my-4">
    <h2><i class="bi bi-tags"></i> Quản Lý Danh Mục</h2>
    <a asp-action="Index" class="btn btn-secondary mb-3">Quay Lại Dashboard</a>

    <div class="row">
        <div class="col-md-4">
            <div class="card">
                <div class="card-header bg-primary text-white">
                    <h5 class="mb-0">Thêm Danh Mục Mới</h5>
                </div>
                <div class="card-body">
                    <form asp-action="AddCategory" method="post">
                        <div class="mb-3">
                            <label class="form-label">Tên Danh Mục</label>
                            <input type="text" name="name" class="form-control" required />
                        </div>
                        <button type="submit" class="btn btn-success w-100">Thêm</button>
                    </form>
                </div>
            </div>
        </div>

        <div class="col-md-8">
            <div class="card">
                <div class="card-header bg-info text-white">
                    <h5 class="mb-0">Danh Sách Danh Mục</h5>
                </div>
                <div class="card-body">
                    <table class="table table-striped">
                        <thead>
                            <tr>
                                <th>ID</th>
                                <th>Tên Danh Mục</th>
                                <th>Số Sản Phẩm</th>
                            </tr>
                        </thead>
                        <tbody>
                            @foreach (var category in Model)
                            {
                                <tr>
                                    <td>@category.Id</td>
                                    <td><strong>@category.Name</strong></td>
                                    <td><span class="badge bg-primary">@category.Products.Count sản phẩm</span></td>
                                </tr>
                            }
                        </tbody>
                    </table>
                </div>
            </div>
        </div>
    </div>
</div>
