@model MilkTeaShop.Models.Order
@{
    ViewData["Title"] = "Xác Nhận Đơn Hàng";
}

<div class="container my-5">
    <div class="text-center mb-4">
        <div class="text-success mb-3">
            <i class="bi bi-check-circle" style="font-size: 4rem;"></i>
        </div>
        <h2 class="text-success">Đặt Hàng Thành Công!</h2>
        <p class="lead">Cảm ơn bạn đã đặt hàng tại Milk Tea Shop</p>
    </div>

    <div class="card">
        <div class="card-header">
            <h5>Thông Tin Đơn Hàng #@Model.Id</h5>
        </div>
        <div class="card-body">
            <div class="row mb-3">
                <div class="col-md-6">
                    <p><strong>Khách Hàng:</strong> @Model.CustomerName</p>
                    <p><strong>Số Điện Thoại:</strong> @Model.Phone</p>
                    <p><strong>Địa Chỉ:</strong> @Model.Address</p>
                </div>
                <div class="col-md-6">
                    <p><strong>Ngày Đặt:</strong> @Model.OrderDate.ToString("dd/MM/yyyy HH:mm")</p>
                    <p><strong>Thanh Toán:</strong> @Model.PaymentMethod</p>
                    <p><strong>Trạng Thái:</strong> <span class="badge bg-warning">Đang Xử Lý</span></p>
                </div>
            </div>

            <hr />

            <h6>Tổng Tiền: <span class="text-danger fs-4">@Model.TotalAmount.ToString("N0") đ</span></h6>

            <div class="alert alert-info mt-3">
                <strong>Lưu ý:</strong> Đơn hàng của bạn sẽ được giao trong vòng 30-45 phút. Chúng tôi sẽ liên hệ với bạn sớm nhất!
            </div>
        </div>
    </div>

    <div class="text-center mt-4">
        <a href="@Url.Action("Index", "Home")" class="btn btn-primary">Về Trang Chủ</a>
        <a href="@Url.Action("Index", "Products")" class="btn btn-outline-primary">Tiếp Tục Mua Sắm</a>
    </div>
</div>
